@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Album</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AlbumToEdit.AlbumId)

        <div class="form-group">
            @Html.LabelFor(model => model.AlbumToEdit.GenreId, "GenreId", htmlAttributes: new { @class = "control-label col-md-2" })
